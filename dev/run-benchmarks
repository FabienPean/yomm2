#!/bin/bash

cd ./build/$1/Release
make -j4 benchmarks
tests/benchmarks --benchmark_color=false --benchmark_repetitions=5 | perl -ne "$(cat <<'PERCENTS'
if (s/_median//) {
  if ($n0) {
     s{\d+\.\d+ ns\s+(\d+\.\d+) ns.*}{$1 . sprintf " ns %+2.1f%%\n", ($1 - $n0) / $n0 * 100}e or die;
     $n0 = 0;
  } else {
    s/\d+\.\d+ ns\s+(\d+\.\d+) ns.*/$1 ns/;
    $n0 = $1
  }
  print;
}
PERCENTS
)"
